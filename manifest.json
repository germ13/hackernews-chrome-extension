{
    "name": "hackernews",
    "description": "improves hackernews",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "page_action": {
        "default_icon": {
            "32": "spock.png"
        },
        "default_title": "hackerne.ws"
    },
    "permissions": [
        "activeTab", "storage", "history", "declarativeContent"
    ],
    "content_scripts":
    [
        {
            "matches": ["*://news.ycombinator.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}
